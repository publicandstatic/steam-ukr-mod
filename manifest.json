{
  "manifest_version": 3,
  "name": "єУкраїнізатор",
  "version": "1.0",
  "description": "Показує наявність українізатора в посібниках Steam",
  "permissions": ["scripting"],
  "host_permissions": [
    "https://store.steampowered.com/*",
    "https://steamcommunity.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://store.steampowered.com/app/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon48.png"
  }
}
